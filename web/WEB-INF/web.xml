<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>SrvFitness</servlet-name>
        <servlet-class>servlets.SrvFitness</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvRecepcion</servlet-name>
        <servlet-class>servlets.SrvRecepcion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SrvFitness</servlet-name>
        <url-pattern>/SrvFitness</url-pattern>
        <url-pattern>/SrvFitness/*</url-pattern>
        <!--<url-pattern>QuickFitness/SrvFitness</url-pattern>-->        
    </servlet-mapping>
    <servlet>
        <servlet-name>ManejadorBD</servlet-name>
        <servlet-class>servlets.ManejadorBD</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManejadorBD</servlet-name>
        <url-pattern>/ManejadorBD</url-pattern>
        <!--<url-pattern>QuickFitness/ManejadorBD</url-pattern>-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvRecepcion</servlet-name>
        <url-pattern>/SrvRecepcion</url-pattern>
        <!--<url-pattern>QuickFitness/SrvRecepcion</url-pattern>-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvRecepcion</servlet-name>
        <url-pattern>/SrvRecepcion/*</url-pattern>
        <!--<url-pattern>QuickFitness/SrvRecepcion/*</url-pattern>-->
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
